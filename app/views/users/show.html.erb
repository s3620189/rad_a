<% provide(:title, @user.email) %>
<aside class="row">
 
    <%= render 'sidebar' %>

</aside>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          email :
          <%= @user.email %>
          <br>phone :
          <%= @user.phone %>
          <br>Joining time:
          <%= @user.created_at %>
        </h1>
    </section>
  </aside>
</div>

<div>
Another recent posts:


    <% @user.posts.each do |post| %>
    <li>
    
    <%= link_to post.title, post_comment_path(post,post.id) %><br>
    
   
    </li>
    <% end %>



</div>

<div>
Another recent comments:
  <% @user.comments.each do |comment| %>
    <li>
    <%= comment.created_at %><br>
    <%= link_to comment.comments , post_comment_path(comment.post,comment.post.id) %><br>
    
   
    </li>
    <% end %>


</div>